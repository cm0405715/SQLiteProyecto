<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteProyecto.MainPage">

    <StackLayout VerticalOptions="Center" Margin="10">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="CRUD Empleados" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="lblStatus" HorizontalOptions="Center" TextColor="Black"></Label>

        <Button Text="Mostrar" HorizontalOptions="FillAndExpand"
                    x:Name="btnMostrar" TextColor="Green"></Button>
        <Button Text="Crear" HorizontalOptions="FillAndExpand" 
                    x:Name="btnNuevo" TextColor="DeepSkyBlue"></Button>

        <Label Text="Id de empleado: " 
                Margin="0,30,0,0"
               HorizontalOptions="CenterAndExpand" TextColor="ForestGreen"></Label>
        <Entry x:Name="cajaid" HorizontalOptions="FillAndExpand"></Entry>

        <Button Text="Modificar" HorizontalOptions="FillAndExpand" 
                x:Name="btnModificar" TextColor="Purple"></Button>
        <Button Text="Borrar" HorizontalOptions="FillAndExpand" 
                x:Name="btnEliminar" TextColor="Red"></Button>
    </StackLayout>

</ContentPage>
